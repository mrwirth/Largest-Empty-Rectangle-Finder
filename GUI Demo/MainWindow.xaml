<Window x:Class="GUI_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI_Demo"
        xmlns:xwpf="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="Generate _New Random Sample"/>
            </MenuItem>
        </Menu>
        <ToolBarTray DockPanel.Dock="Top">
            <ToolBar>
                <Button Command="{Binding OpenFolder}">
                    <ContentControl Content="{StaticResource NewRandomSample}" ToolTip="Generate New Random Sample"/>
                </Button>
            </ToolBar>
        </ToolBarTray>
        <StackPanel DockPanel.Dock="Left" Width="130">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Base Color:"/>
                <xwpf:ColorPicker Grid.Column="1"
                                  x:Name="BaseRectColor"
                                  SelectedColor="Blue"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Overlay Color:"/>
                <xwpf:ColorPicker Grid.Column="1"
                                  x:Name="OverlayRectColor"
                                  SelectedColor="Green"/>
            </Grid>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="85"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Label Content="Result Color:"/>
                <xwpf:ColorPicker Grid.Column="1"
                                  x:Name="ResultRectColor"
                                  SelectedColor="Orange"/>
            </Grid>
        </StackPanel>
        <Canvas Name="ResultCanvas"/>
    </DockPanel>
</Window>
